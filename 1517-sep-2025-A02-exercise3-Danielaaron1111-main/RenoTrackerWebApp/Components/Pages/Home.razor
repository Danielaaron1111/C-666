<style>
    body {
        background-color: #F8F0FF; 
    }
    

    .em {
        font-style: italic;
        
    }
    .welcome-box {
        background-color: #E6E6FA; /* lavender - light purple */
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

   
    .welcome-box h1 {
        color: #4B0082; /* indigo - darker purple for contrast */
        font-weight: bold;
        margin-bottom: 25px;
    }

    
    .welcome-box p {
        color: #333;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 20px;
    }

    
    .welcome-box .lead {
        font-size: 1.2rem;
    }
</style>

@code {
    //variable to hold the welcome message with current date and time
    private string WelcomeMsg = "";
    
    protected override void OnInitialized()
    {
        //the base class has a default method for OnInitialized()
        //the default method does your base setup
        //it is strongly suggested that you DO NOT remove this statement
        base.OnInitialized();

        //following the basic setup, you can customize your page and its variable values
        WelcomeMsg = $"Let's get started on day {DateTime.Now.ToShortDateString()} at {DateTime.Now.ToShortTimeString()}";
    }
}